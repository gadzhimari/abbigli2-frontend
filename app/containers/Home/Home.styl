h1
  text-align: center
  font-family:'Bitter'
  font-weight: normal
  font-size: 36px
  line-height: 50px
  margin: 50px auto;
  width: 70%

.w-inner
  max-width 1280px
  margin-left: auto
  margin-right: auto

.pre-footer
  background-color: #fff
  padding: 50px 0 25px 0
  font-size: 16px

  h1
    margin-top: 0

  .w-inner
    padding: 0 40px

    p
      line-height: 23px;
      margin 28px 0

.map {
  margin: 0 auto;
  max-width: 1300px;
  text-align: center;

  &-img {
    width: 100%;
  }
}


.detail__slider .slick-dots { bottom: 20px; }
.detail__slider .slick-dots li{}
.detail__slider .slick-dots li button{ background-color: #b0bec5;width:20px; height:20px; border-radius 50%;border: 4px solid #fff;box-sizing border-box }
.detail__slider .slick-dots li.slick-active button{ background-color: #02a511; }
.detail__slider .slick-dots li button:before{display: none;}

.home__section-text {
  font-size: 30px;
  margin: 40px 0 20px;
  line-height: 1.2;
}

@media only screen and (max-width: 670px) {
  .home__section-text {
    font-size: 22px;
    line-height: 26px;
    padding: 0 10px;
    margin: 20px 0 25px 0;
  }
  .pre-footer {
    padding-top: 20px;
    .w-inner  {
      padding: 0 10px;
      p {
        margin: 15px 0;
      }
    }
  }
  .separate-block {
    &.orange {
      display: none;
    }
  }
}

.home__title-wrapper {
  width: 100%;
  max-width: 600px;
  text-align: center;
  margin: 0 auto;
}

.home__show-more {
  text-align: center;
  margin-top: 15px;
}
