.cards-wrap.my-showcase.legacy {
  .tag-card__author{
    display: none
  }
}

.profile_content__error {
  text-align: center;
}

.main.profile {
  position: relative;
}

.main__overlay {
  position: absolute;
  display: none;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(255,255,255,0.5);
  z-index: 100;
}

.profile-page--edit .main__overlay {
  display: block;
}

.profile_content {
  margin-top: 67px;
  padding: 35px 0;
  border-top: 1px solid #dcdcdc;
}

@media all and (max-width: 760px) {
    .profile_content {
      margin-top: 10px;
    }
}
