.event-card {
  background-color: #fff;
  display: inline-block;
  vertical-align: top;
  height: 485px;
  margin: 0 5px 10px;
  position: relative;
  width: 350px;
  text-align: left;
  -webkit-box-shadow: 0 0 4px #8f8e8e;
  box-shadow: 0 0 4px #8f8e8e;
}

.event-card__content {
  color: #263238;
  height: 405px;
  overflow: hidden;
  display: block;
}

.event-card__img {
  position: relative;
  height: 260px;
  overflow: hidden;
}

.event-card__avatar {
  background-color: #fff;
  border: 3px solid #fff;
  width: 50px;
  height: 50px;
  position: absolute;
  left: 20px;
  bottom: 10px;
  overflow: hidden;
  -webkit-border-radius: 50%;
  border-radius: 50%;
}

.event-card__avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.event-card__name {
  font-family: 'clear_sansbold';
  font-size: 14px;
  line-height: 18px;
  text-transform: uppercase;
  margin: 20px 0 15px 0;
  padding: 0 20px;
}

.event-card__text {
  font-size: 14px;
  line-height: 18px;
  padding: 0 20px;
}

.event-card__date {
  font-family: 'clear_sansbold';
  margin-bottom: 15px;
  font-size: 14px;
  line-height: 18px;
  position: relative;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  padding-left: 25px;
}

.event-card__date .icon {
  fill: #263238;
  background-size: 14px 16px;
  width: 14px;
  height: 16px;
  position: absolute;
  left: 0;
  top: 0;
}

.event-card__content:hover .event-card__name,
.event-card__content:hover .event-card__text {
  color: #1076ff;
}

.event-card .like-comment {
  padding: 0 20px;
  text-align: left;
  margin-top: 15px;
}

.event-card .like-comment__button {
  margin-right: 10px;
}