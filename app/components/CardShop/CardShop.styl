.card-shop {
  background-color: #fff;
  display: inline-block;
  vertical-align: top;
  border: 1px solid #8f8e8e;
  border-radius: 3px;
  width: 385px;
  height: 284px;
  margin: 7px;

  img {
    width: 100%;
    height: 100%;
  }

  &__img {
    position: relative;
    display: inline-block;
    vertical-align: top;
    overflow: hidden;
    &:first-child {
      width: 263px;
      height: 204px;
    }
    &:nth-child(2) {
      width: 120px;
    }
    &-small {
      height: 102px;
    }
  }

  &__info {
    position: relative;
    padding: 10px 10px 10px 75px;
    text-align: left;
  }
  &__avatar {
    width: 56px;
    height: 56px;
    overflow: hidden;
    border-radius: 2px;
    position: absolute;
    left: 10px;
    top: 10px;
  }
  &__name {
    font-family: 'clear_sansbold';
    font-size: 16px;
    line-height: 20px;
    color: #1d1c1c;
    top: -3px;
    position: relative;
    &:hover {
      text-decoration: underline;
    }
  }
  &__city {
    font-size: 14px;
    line-height: 18px;
    padding-left: 15px;
    position: relative;
    color: #8b8b8b;

    &:after {
      background: url("/images/icons_with_bg/point.svg") no-repeat;
      background-size: 10px 14px;
      content: '';
      display: block;
      position: absolute;
      left: 0;
      top: 0;
      width: 10px;
      height: 14px;
    }
  }

  &__rating {
    unicode-bidi: bidi-override;
    color: #aeaeae;
    font-size: 20px;
    height: 20px;
    width: 85px;
    position: relative;
    padding: 0;
    margin: -5px 0 3px;
    &-active {
      font-size: 20px;
      color: #ffa300;
      padding: 0;
      position: absolute;
      z-index: 1;
      display: block;
      top: 0;
      left: 0;
      overflow: hidden;
    }
    &-star {
      padding: 0;
      display: block;
      z-index: 0;
    }
  }
}