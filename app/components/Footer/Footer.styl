.footer {
  background-color: #f2f2f2;
  padding: 20px 0;
  box-sizing border-box
  position: relative;
  height: 87px
}

.footer-content {
  max-width: 1200px;
  margin-left: auto
  margin-right: auto
  position: relative;
}

.footer-logo {
  display: block
  opacity: .5
  width: 136px
  height: 35px
  background-image: url(/images/footer-logo.png)
  margin-top: 10px;
}

.footer-menu {
  position: absolute;
  left: 43%;
  top: 6px;
  -webkit-transform: translate(-50%,0);
  transform: translate(-50%,0);


}

.isDesktop .footer-menu {
  text-transform: uppercase;
}

.footer-menu__item {
  color: #263238;
  font-size: 16px;
  margin 0 30px 0 0
}

.footer-rightcol
  position: absolute
  top: 7px
  right: 0

  .footer-rightcol_item
    display: inline-block
    color: #8b8b8b
    margin-right 45px

  .footer-copyright
    display: inline-block
    color: #8b8b8b



  /*

  fs 16px   menu 4e4d4d  dis 32px

  copy 14px 8b8b8b

  */

@media only screen and (max-width: 1000px) {
  .footer-menu {
    display: none;
  }
}

@media only screen and (max-width: 670px) {
  .footer {
    height: 55px;
    &-logo {
      display: none;
    }
    &-rightcol {
      position: relative;
      right: auto;
      top: 0;
      padding: 0 10px;
      &-item {
        position: absolute;
        left: 0;
        margin: 0;
      }
    }
    &-copyright {
      font-size: 12px;
      line-height: 16px;
      position: absolute;
      right: 0;
      top: 0;
    }
  }
}