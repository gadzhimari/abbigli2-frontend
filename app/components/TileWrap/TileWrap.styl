.tile-wrap {
  font-size: 0;
  margin: 0 auto;
  padding: 0;
  text-align: center;
  max-width 1200px;

  &__title {
    border-bottom: 1px solid #90a4ae;
    color: #90a4ae;
    font-family: "SegoeUIBold";
    font-size: 20px;
    line-height: 24px;
    margin: 0 30px 20px;
    padding-bottom: 10px;
    text-align: left;
  }

  .slick-prev::before, .slick-next::before {
    background: url("/images/icons_with_bg/next.svg") no-repeat;
    content: '';
    display: block;
    background-size: 14px 28px;
    width: 14px;
    height: 28px;
  }
  .slick-prev::before {
    transform:rotate(-180deg);
  }
  .slick-prev.slick-disabled:before, .slick-next.slick-disabled:before {
    background: url("/images/icons_with_bg/next-disabled.svg") no-repeat;
    opacity: 1;
    cursor: default;
  }
}