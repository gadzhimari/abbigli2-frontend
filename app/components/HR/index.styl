.separate-block {
  width: 100%;
  height: 1px;
  background-color: #a6a6a6;
  margin-top: 50px;

  .icon {
    background-color: #f6f6f6;
    width: 125px;
    height: 40px;
    margin: 0 auto;
    position: relative;
    top: -20px;

    &:after {
      content: '';
      display: block;
      margin: 0 auto;
      background-repeat: no-repeat;
      background-size: 40px 40px;
      width: 40px;
      height: 40px;
    }

    &.blue {
      &:after {
        background-image: url("/images/icons_with_bg/hand-blue.svg");
      }
    }
    &.green {
      &:after {
        background-image: url("/images/icons_with_bg/hand-green.svg");
      }
    }
    &.purple {
      &:after {
        background-image: url("/images/icons_with_bg/hand-purple.svg");
      }
    }
    &.orange {
      &:after {
        background-image: url("/images/icons_with_bg/hand-orange.svg");
      }
    }
    &.abbigli {
      &:after {
        background-image: url("/images/icons_with_bg/hand-abbigli.svg");
      }
    }
    &.heart {
      &:after {
        background-image: url("/images/icons_with_bg/heart.svg");
      }
    }
  }
}


@media only screen and (max-width: 480px) {
  .separate-block {
      background: none;
      margin: 30px 0;
  }
}