.mobile-search__switcher {
    width: 100%;
    height: 25px;
    background-color #e2e2e2;
    overflow: hidden;
    border-radius: 3px;
}

.mobile-search__mode {
    width: 50%;
    height: 100%;
    display: inline-block;
    text-align: center;
}

.active.mobile-search__mode {
    background-color: #1075ff;
}

.mobile-search__tag-icon {
    width: 14px;
    height: 16px;
    fill: #1075ff;
    margin-top: 3px;
}

.active .mobile-search__tag-icon {
    fill: #90a4ae;
}

.mobile-search__user-icon {
    background-image: url("/images/icons_with_bg/user.svg"), url("/images/icons_with_bg/user_active.svg");
    background-position: -17px 0, 0 0;
    background-repeat: no-repeat;
    background-size: 17px 19px;
    width: 17px;
    height: 19px;
    display: inline-block;
}

.active .mobile-search__user-icon {
    background-position: 0 0, -17px 0;
}

.mobile-search__form {
    width: 100%;
    margin-top: 20px;
    border: 1px solid #e2e2e2;
    padding: 2px 0;
}

.mobile-search__input {
    padding: 0 4px;
    width: 100%;
    height: 26px;
    border: none;
    outline: none;
    cursor: pointer;
    font-family: 'clear_sansregular', sans-serif;
}

.mobile-search__options {
    border-top: 1px solid #e2e2e2;
    padding: 0;
}
.mobile-search__list {
    padding: 0;
}

.mobile-search__option {
    padding: 4px;
    box-sizing: border-box;
}

.mobile-search__active-option {
    background-color: #1076FF;
}

.mobile-search__button {
    width: 100%;
    border-radius: 3px;
    border: none;
    background-color: #1076FF;
    outline: none;
    color: #fff;
    text-align: center;
    font-size: 18px;
    margin-top: 20px;
    padding: 5px 0;
}
