.subscription {
  position: absolute;
  right: 10px;
  top: 10px;
  z-index: 1;

  &__icon {
    background-color: #fff;
    position: relative;
    border: 1px solid #b9b9b9;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    cursor: pointer;

    &:after {
      content: '';
      display: block;
      background-image: url("/images/icons_with_bg/sandwich.svg"), url("/images/icons_with_bg/sandwich-hover.svg"), url("/images/icons_with_bg/sandwich-active.svg");
      background-repeat: no-repeat;
      background-position: 0 0, -14px 0, -14px 0;
      background-size: 14px 10px;
      width: 14px;
      height: 10px;
      margin: 8px auto 0;
    }

    &:hover {
      border-color: #c7c7c7;
      &:after {
        background-position: -14px 0, 0 0, -14px 0;
      }
    }
  }

  .dropdown {
    padding: 10px 8px;
    top: 37px;
    left: -100px;
    right: auto;
    width: 175px;
    box-shadow: none;

    &-corner {
      border-width: 0 6px 6px 6px;
      margin: 4px auto 0;
      &:after {
        border-width: 0 6px 6px 6px;
        left: -6px;
      }
    }
  }

  &:hover {
    .dropdown, .dropdown-corner {
      display: block;
    }
  }

  &.active {
    .subscription__icon {
      &:after {
        background-position: -14px 0, -14px 0, 0 0;
      }
    }
  }

  &__item {
    font-family: 'clear_sans_lightregular';
    font-size: 14px;
    color: #747474;
    cursor: pointer;
    margin-bottom: 5px;
    padding-left: 5px;
    &:hover {
      text-decoration: underline;
    }
    .icon {
      background: url("/images/icons_with_bg/check-red.svg") no-repeat;
      display: inline-block;
      vertical-align: middle;
      width: 8px;
      height: 6px;
      margin-left: 3px;
    }
  }

  &__input {
    font-family: 'clear_sans_lightregular';
    font-size: 14px;
    color: #747474;
    line-height: 18px;
    padding: 5px 9px;
    border: 1px solid #bab9b8;
    border-radius: 3px;
    width: 122px;
    margin-right: 5px;
    display: inline-block;
    vertical-align: top;
  }

  &__button {
    background-color: #f22222;
    border-radius: 3px;
    width: 30px;
    height: 30px;
    position: relative;
    border: none;
    display: inline-block;
    vertical-align: top;

    &:after {
      content: '';
      display: block;
      background: url("/images/icons_with_bg/check-white.svg");
      background-size: 15px 11px;
      width: 15px;
      height: 11px;
      margin-left: 1px;
    }

    &:hover {
      background-color: #e70303;
    }
    &:active {
      background-color: #cf0000;
      box-shadow: 0 0 2px #b10000 inset;
    }
  }
}

@media only screen and (max-width: 480px) {
  .subscription .dropdown {
    right: 0;
    left: auto;
  }
}