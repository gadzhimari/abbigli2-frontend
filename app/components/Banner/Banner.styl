.main-page__banner-wrap {
  background-image: url("/images/banner/main-banner.jpg");
  background-color: #edeff4;
  background-position: top center;
  background-repeat: no-repeat;
  background-size: cover;
  height: 360px;
  position: relative;
  width: 100%;
  margin-bottom: 50px;
}

.main-page__banner {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  max-width: 1200px;
  position: relative;

  &-heading {
    font-size: 36px;
  }
  &-text {
    font-family: 'Bitter', serif;
    color: #1d1c1c;
    font-size: 30px;
    line-height: 52px;
    text-align: left;
    width: 70%;
    position: relative;
    top: 50%;
    transform: translate(0,-50%);
  }
  &-author {
    background-color: rgba(31,31,31,0.55);
    position: absolute;
    right: 10px;
    bottom: 0;
    color: #fff;
    text-align: center;
    min-width: 240px;
    padding: 15px;
    border-radius: 5px 5px 0 0;
    &:hover {
      text-decoration: underline;
    }
  }
}

.button-banner {
  margin-top: 40px;
  background-color: #0090de
  color: #fff;
  height: 43px;
  padding: 0 18px;
  border-radius 3px
  font-size: 18px
  line-height: 43px;
  font-family: "clear_sansregular", Helvetica, Arial, sans-serif;
  border: none;

  &:hover {
    background-color: #007cc1;
  }
  &:active {
    background-color: #006fac;
    box-shadow: 0 0 2px #025989 inset;
  }
}

.isMobile .button-banner {
  height: auto;
}

