.like {
  position: absolute;
  right: 10px;
  top: 10px;
  background-color: #fff;
  border: 1px solid #b9b9b9;
  width: 28px;
  height: 28px;
  border-radius: 50%;
  cursor: pointer;

  &:after {
    content: '';
    display: block;
    background-image: url("/images/icons_with_bg/like.svg"), url("/images/icons_with_bg/like-active.svg");
    background-repeat: no-repeat;
    background-position: 0 0, -14px 0;
    background-size: 14px 12px;
    width: 14px;
    height: 12px;
    margin: 8px auto 0;
  }

  &.liked
  &:hover {
    border-color: #c7c7c7;
    &:after {
      background-position: -17px 0, 0 0;
    }
  }
}