.auth-popup-wrapper {
  z-index: 5
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0
  background-color: rgba(0,0,0,0.6)
}

.auth-popup{
  z-index: 10
  background-color: #fff;
  position: absolute;
  padding: 30px 20px 40px;
  top: 50%;
  max-height: 95%;
  overflow-y: auto;
  left: 50%;
  width: 550px;
  border: 1px solid #90a4ae;
  -webkit-border-radius: 5px;
  border-radius: 5px;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  -webkit-box-shadow: 0 2px 4px #3d4041;
  box-shadow: 0 2px 4px #3d4041;
}

.textarea--send-message {
  margin: 0!important;
  box-sizing: border-box!important;
}

.popup__send-error {
  color: #d10e0e;
  margin-top: 10px;
  font-size: 14px;
}

.recipient {
  width: 100%;
  height: 70px;
  max-width 500px;

  display: flex;
  align-items: center;
  flex-shrink: 0;

  margin: 15px 0 20px;
  padding: 10px;
  border: 1px solid #e2e2e2;

  cursor: pointer;

  &:hover {
    background-color: #e2e2e2;
  }
}

.recipient .mobile-search__people-avatar {
  width: 55px;
  height: 55px;
}

.recipient__info {
  text-align: left;
}

.recipient__name {
  font-size: 18px;
  color: #263238
}

.recipient__city {
  color: #686868;
  margin-top: 10px;
}
