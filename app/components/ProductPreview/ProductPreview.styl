.slider-goods {
    display: inline-block;
}

.product-slider {
    width: 100%;
    max-width: 460px;
}

.slides-container {
    width: 100%;
    height: 460px;
    overflow: hidden;
    position: relative;
}

.sp-slides {
    cursor: pointer;
}

.sp-slide {
    width: 100%;
    height: auto;
    opacity: 0;
    z-index: 1;
    position: absolute;
    top: 0;
    left: 0;
    transition: all ease 0.5s;
}

.selected {
    z-index: 10;
    opacity: 1;
}

.thumbnails-container {
    width: 100%;
    margin-top: 20px;
    overflow: hidden;
}

.sp-thumbnails {
    transition: all ease 0.4s;
}

.sp-image {
    width: 100%;
}

.sp-full-screen-button {
    top: 0;
}

.sp-arrow {
    position: absolute;
    top: 50%;
    transform: translate3d(0, -50%, 0);
    display: block;
    width: 40px;
    height: 40px;
    cursor: pointer;
    border-radius: 3px;
    background-color: #2e2e2e;
    opacity: 0.4;
}

.sp-previous-arrow {
    left: 10px;
}

.sp-next-arrow {
    right: 10px;
}

.modal-gallery__overlay {
    width: 100%;
    height: 100%;
    background-color: rgba(46, 46, 46, 0.7);
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1001;
    & path {
        pointer-events: none;
    }
}

.modal-gallery {
    background-color: #e5e5e5;
    max-width: 1000px;
    border-radius: 5px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    padding: 10px;
}

.modal-gallery__close {
    width: 27px;
    height: 27px;
    position: absolute;
    top: -30px;
    right: 0;
    cursor: pointer;
    z-index: 101;
    &:hover {
        fill: #2e2e2e;
    }
}

.modal-gallery__image {
    width: 100%;
    position: absolute;
    top 0;
    left: 0;
    display: none;
    z-index: 1;
}

.modal-gallery__image--active {
    position: relative;
    display: block;
    z-index: 100;
}

.modal-gallery__arrow {
    position: absolute;
    top: 50%;
    transform: translate3d(0, -50%, 0);
    display: block;
    width: 40px;
    height: 40px;
    cursor: pointer;
    border-radius: 3px;
    background-color: #2e2e2e;
    opacity: 0.4;
    z-index: 102;
    &:hover {
        opacity: 0.8;
    } 
    & .icon {
        background-size: 12px 19px;
        fill: #fff;
        position: absolute;
        left: 50%;
        top: 50%;
        width: 12px;
        height: 19px;
        transform: translate(-50%,-50%);
    }
}

.modal-gallery__arrow--prev {
    left: 10px;
}

.modal-gallery__arrow--next {
    right: 10px;
}